<h1>タスクリスト一覧</h1>

<% unless logged_in? %>
<%= link_to 'タスク登録',new_task_path,class: 'btn btn-primary' %>
<%= link_to 'ユーザ登録',signup_path, class: 'btn btn-primary' %>

<% else %>
<%=current_user.name %>さん

<% if @tasks.any? %>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>タスクID</th>
        <th>タスク名</th>
        <th>ステータス</th>
      </tr>
    </thead>
    <tbody>
      <% @tasks.each do |task| %>
      <tr>
        <td><%= link_to task.id,task %></td>
        <td><%= task.content %></td>
        <td><%= task.status %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
<% end %>
<%= link_to 'タスク登録',new_task_path,class: 'btn btn-primary' %>
<%= link_to 'ユーザ登録',signup_path, class: 'btn btn-primary' %>

<% end %>